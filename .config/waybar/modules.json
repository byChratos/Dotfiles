//Waybar Modules
//Christian Felske
{
    "custom/launcher": {
        "format": "",
        "on-click": "rofi -show drun -normal-window",
        "tooltip": false
    },

    "custom/wlogout": {
        "format": "",
        "on-click": "sleep 0.05 && wlogout",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "",
        "format-icons": {
            "urgent": " ",
            "active": " ",
            "default": " "
        },
        "persistent-workspaces": {
            "*": 3
        }
    },

    "hyprland/window": {
        "format": " {initialTitle}",
        "rewrite": {
            "(.*) Mozilla Firefox": "  Firefox",
            "(.*) Alacritty": " Alacritty",
            "(.*) Code - OSS": " VSCode",
            "(.*) Discord": " Discord",
            "(.*) ": " -"
        },
        "seperate-outputs": true
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " {volume}%",
        "format-icons": ["", "", ""],
        "on-click": "pavucontrol"
    },

    "clock": {
        "format": " {:%H:%M}",
        "tooltip": false
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-charging": "{icon} {capacity}%",
        "format-plugged": "{icon} {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["", "", "", "", ""]
    }
}